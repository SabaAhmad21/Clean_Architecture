@model IEnumerable<Infrastructure.ViewModels.StudentVM>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            int index = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>
                            @index
                        </span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        <a class="btn btn-xs btn-primary" asp-action="StudentUpdate" asp-controller="Student" asp-route-Id="@item.Id">Edit</a>|
                        <a class="btn btn-xs btn-primary" asp-action="StudentDelete" asp-controller="Student" asp-route-Id="@item.Id">Delete</a>|
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>
